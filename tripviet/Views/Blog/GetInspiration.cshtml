@model List<BlogViewModel>
@{
    ViewData["Title"] = "Lấy cảm hứng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section StyleSheets {
    <link rel="stylesheet" type="text/css" href="~/assets/styles/inspiration_styles.css">
    <link rel="stylesheet" type="text/css" href="~/assets/styles/blog_responsive.css">
}
<div class="home">
    <div class="home_background parallax-window" data-parallax="scroll" data-image-src="../../assets/images/blog_background.jpg"></div>
    <div class="home_content">
        <div class="home_title">@ViewData["Title"]</div>
    </div>
</div>

<div class="blog">
    <div class="container">
        <div class="row">

            <!-- Blog Content -->

            <div class="col-lg-8">

                <div class="row price-area">
                    <div class="col-lg-12">
                        <div class="single-price">
                            <h4>Story Trips</h4>
                            <ul class="price-list">
                                @foreach (var blog in Model)
                                {
                                <li class="">
                                    <a asp-area="" asp-controller="Blog" asp-action="Detail" asp-route-id="@blog.Id">
                                        <img src="../../assets/images/logo.png" alt="Trip Viet image" />
                                        @blog.Title
                                    </a>
                                    <div class="text-right">@blog.Places.FirstOrDefault()?.Name</div>
                                    <div class="text-right">Đăng bởi @blog.Author</div>
                                </li>
                                }
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-12">
